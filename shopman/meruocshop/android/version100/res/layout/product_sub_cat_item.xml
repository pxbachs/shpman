<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_product_sub_cat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/product_sub_cat_img"
        android:layout_width="55dp"
        android:layout_height="66dp"
        android:src="@drawable/placeholder_category" />

    <ImageView
        android:id="@+id/product_sub_cat_hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_sub_cat_img"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hr02" />

    <ImageView
        android:id="@+id/product_sub_cat_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/agree_pressed" />

    <TextView
        android:id="@+id/product_sub_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/product_sub_cat_next"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/product_sub_cat_img"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
